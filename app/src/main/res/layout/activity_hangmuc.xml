<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bachground_xl"
    tools:context=".hangmucActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:theme="@style/AppTheme.AppBarOverlay"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:background="#00000000"
                    android:src="@drawable/ic_arrow_back_black_24dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_height="match_parent"
                    android:text="HẠNG MỤC"
                    android:textSize="20dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:layout_height="match_parent">
                        <ImageButton
                            android:id="@+id/btnSearch"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="7dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="right"
                            android:background="#00000000"
                            android:src="@drawable/ic_search_black_24dp" />
                        <ImageButton
                            android:id="@+id/btnsettingmenu"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="7dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="right"
                            android:background="#00000000"
                            android:src="@drawable/ic_filter_list_black_24dp" />
                        <ImageButton
                            android:id="@+id/btnpopupmenu"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="right"
                            android:background="#00000000"
                            android:src="@drawable/ic_settings_black_24dp" />
                    </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:id="@+id/LayoutSetting"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="25dp">
                    <TextView
                        android:textSize="18dp"
                        android:text="Vị trí :"
                        android:layout_width="85dp"
                        android:layout_height="match_parent" />
                    <android.support.v7.widget.SearchView
                        android:id="@+id/edtVTThaoTac"
                        app:iconifiedByDefault="false"
                        android:layout_width="200dp"
                        app:searchHintIcon="@drawable/ic_search_xam_24dp"
                        app:closeIcon="@drawable/ic_close_xam_24dp"
                        app:searchIcon="@drawable/ic_search_xam_24dp"
                        android:background="@drawable/duongbotron4"
                        android:layout_height="25dp" />
                    <ImageView
                        android:id="@+id/imgViTiThaoTac"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_arrow_drop_down_black_24dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="25dp">
                    <TextView
                        android:textSize="18dp"
                        android:text="Cấu kiện :"
                        android:layout_width="85dp"
                        android:layout_height="match_parent" />
                    <android.support.v7.widget.SearchView
                        android:id="@+id/edtCKcongtac"
                        android:layout_width="200dp"
                        app:searchHintIcon="@drawable/ic_search_xam_24dp"
                        app:closeIcon="@drawable/ic_close_xam_24dp"
                        app:searchIcon="@drawable/ic_search_xam_24dp"
                        app:iconifiedByDefault="false"
                        android:background="@drawable/duongbotron4"
                        android:layout_height="25dp" />
                    <ImageView
                        android:id="@+id/imgCauKienThaotac"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_arrow_drop_down_black_24dp" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutLine"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="2dp"
                android:background="@drawable/line"
                android:orientation="horizontal"></LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:id="@+id/LayoutSearch"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="vertical">
                <android.support.v7.widget.SearchView
                    android:id="@+id/SearchViewCT"
                    app:iconifiedByDefault="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v7.widget.SearchView>
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageButton
                    android:id="@+id/btnHome"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_home_black_24dp"
                    android:background="#00000000"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_keyboard_arrow_right_black_24dp" />
                <TextView
                    android:textColor="#ec1358a6"
                    android:textStyle="bold"
                    android:id="@+id/tvHangMuc"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:text="GMT 2325"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="2dp"
                android:background="@drawable/line"></LinearLayout>
        </LinearLayout>




        <ViewStub
            android:id="@+id/stub_list_HM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inflatedId="@+id/showlayout"
            android:layout="@layout/my_list_hangmuc_view"/>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>