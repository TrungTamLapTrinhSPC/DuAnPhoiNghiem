<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bachground_xxl"
    tools:context=".Main4Activity">
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:paddingTop="10dp"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            >

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:background="@drawable/ic_arrow_back_black_24dp" />
            <TextView
                android:textColor="#fff"
                android:layout_width="210dp"
                android:paddingLeft="10dp"
                android:layout_height="match_parent"
                android:text="Báo cáo hình ảnh"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_height="match_parent">



                <ImageButton
                    android:id="@+id/btnpopupmenu"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:background="#00000000"
                    android:src="@drawable/ic_menu_black_24dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal"
            >

            <ImageButton
                android:id="@+id/btnHome"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_home_black_24dp"
                android:background="#00000000"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_keyboard_arrow_right_black_24dp" />
            <TextView
                android:id="@+id/tvHangMuc"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:layout_marginTop="3dp"
                android:text="Hạng mục 1"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_keyboard_arrow_right_black_24dp" />
            <TextView
                android:textStyle="bold"

                android:textColor="#ec1358a6"
                android:id="@+id/tvCongTac"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:layout_marginTop="3dp"
                android:text="Mẫu báo cáo"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="2dp"
        android:background="@drawable/line"></LinearLayout>
    <com.example.chirag.googlesignin.MultiLevelListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="10dp" />
</LinearLayout>