<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgound_header_4"

    tools:context="com.example.chirag.googlesignin.Activity_SuaHinhAnh">
    <ImageView
        android:id="@+id/imgHinh"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp">
        <TextView
            android:id="@+id/tvTenHinhAnh"
            android:layout_width="match_parent"
            android:paddingStart="10dp"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:background="#00000000"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp">

        <ImageButton
            android:id="@+id/btnChinhSua"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:src="@drawable/ic_crop_black_24dp"/>
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/btnGanLaiToDo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:src="@drawable/ic_location_on_black_24dp"/>
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/btnLuu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:src="@drawable/ic_file_download_withle_24dp"/>
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/btnThoat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:src="@drawable/ic_close_xam_24dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp">
        <TextView
            android:layout_width="75dp"
            android:text="Chỉnh sửa"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:background="#00000000"/>
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="50dp"
            android:text="Toạ độ"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:background="#00000000"/>
        <Space
            android:layout_width="20dp"
            android:textColor="#fff"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="50dp"
            android:text="Lưu lại"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:background="#00000000"/>
        <Space
            android:layout_width="20dp"
            android:textColor="#fff"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="70dp"
            android:text="Thoát"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:background="#00000000"/>
    </LinearLayout>
</LinearLayout>
