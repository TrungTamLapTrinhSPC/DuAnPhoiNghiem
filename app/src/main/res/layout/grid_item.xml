<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:cardCornerRadius="12dp"
        android:layout_margin="10dp"
        android:elevation="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:background="@color/color_Blue1"
                android:id="@+id/txtMaTram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Tên"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="23dp"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                />
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="115dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/cotdayco" />
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/line">    </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icons8_calendar9" />

                <TextView
                    android:id="@+id/txtNgay"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="start|center_vertical"
                    android:text="18-12-2020"
                    android:textColor="#686868"
                    android:textSize="13sp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="365dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_bts" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="start|center_vertical"
                    android:text="Trạm gốc: "
                    android:textColor="#686868"
                    android:textSize="13sp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="365dp" />
                <TextView
                    android:id="@+id/txtTramGoc"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="start|center_vertical"
                    android:text="03"
                    android:textColor="#686868"
                    android:textSize="13sp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="365dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
