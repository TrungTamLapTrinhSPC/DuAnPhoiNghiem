<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical"
            android:background="@drawable/anh_menu4">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <ImageButton
                    android:id="@+id/btnBackMenu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_baseline_arrow_back"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:elevation="6dp"
                    android:layout_marginLeft="10pt"
                    android:layout_marginTop="10pt"
                    android:background="#fff"
                    card_view:cardCornerRadius="100dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/anh_menu_1" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_Ten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Tuấn Anh Nguyễn"
                android:textColor="#000"
                android:textSize="18dp" />

            .          <TextView
            android:id="@+id/tv_Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="anhnt.spc@gmail.com"
            android:textColor="#686868"
            android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_MaTram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="HNI123"
                android:textColor="#000"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_TrangChinh"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="20pt"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/icons8_home_page"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:text="Trang chính"
                android:textSize="20dp"
                android:layout_marginLeft="5pt"
                android:layout_gravity="bottom"
                android:textColor="#686868" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_DongBoGGDrive"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="20pt"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/icons8_google_driver"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:text="Đồng bộ lên driver "
                android:textSize="20dp"
                android:layout_marginLeft="5pt"
                android:layout_gravity="bottom"
                android:textColor="#686868" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_TongQuanBaoCao"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="20pt"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/icons8_report_card"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:text="Xem tổng quan báo cáo"
                android:textSize="20dp"
                android:layout_marginLeft="5pt"
                android:layout_gravity="bottom"
                android:textColor="#686868" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_PhuLucAnh"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="20pt"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/icons8_image_file"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:text="Xem phụ lục hình ảnh"
                android:textSize="20dp"
                android:layout_marginLeft="5pt"
                android:layout_gravity="bottom"
                android:textColor="#686868" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="20pt"
            android:layout_marginTop="10dp">

        </LinearLayout>

    </LinearLayout>
</LinearLayout>