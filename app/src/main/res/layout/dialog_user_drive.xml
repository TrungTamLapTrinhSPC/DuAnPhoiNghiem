<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bachground_xxl"
    android:weightSum="1">

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#fff"
            android:layout_marginTop="5dp"
            android:text="Tên người dùng app:"
            android:gravity="left"
            android:textSize="20dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.04" />

        <EditText
            android:hint="Họ và tên"
            android:textColor="#1D8B98"
            android:gravity="top"
            android:id="@+id/edtTenNguoiDung"
            android:layout_width="250dp"
            android:layout_height="30dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:weightSum="1">
            <Button
                android:id="@+id/btnthoat"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="0.17"
                android:text="Thoát"
                android:textColor="#faf8f8" />
            <Button
                android:id="@+id/btnOK"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.21"
                android:text="OK"
                android:textColor="#faf8f8" />
        </LinearLayout>
        <TextView
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:textColor="#fff"
            android:text="Mỗi người dùng chỉ được nhập tên người dùng 1 lần. Nếu đã có tên hãy bấm ok."/>
    </LinearLayout>



</LinearLayout>