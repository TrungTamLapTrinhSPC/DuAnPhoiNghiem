<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/dobong"
            android:layout_margin="10dp"
            android:gravity="center"
            android:elevation="6dp">

            <LinearLayout
                android:layout_width="250dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên cột:"
                    android:textColor="#000"
                    android:paddingLeft="10dp"
                    android:textSize="18dp"
                    android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvTenCot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cột A"
                    android:textColor="#000"
                    android:paddingLeft="10dp"
                    android:textSize="18dp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/line">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <ImageButton
                        android:layout_marginTop="5dp"
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/x"/>
                    <TextView
                        android:id="@+id/tvToaDoX"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12m"
                        android:textColor="#686868"
                        android:textSize="14dp"
                        android:layout_gravity="center_vertical"/>

                    <ImageButton
                        android:layout_marginTop="5dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/y"/>
                    <TextView
                        android:id="@+id/tvToaDoY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12m"
                        android:textColor="#686868"
                        android:textSize="15dp"
                        android:layout_gravity="center_vertical"/>

                    <ImageButton
                        android:layout_marginTop="5dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/height_tower"/>
                    <TextView
                        android:id="@+id/tvChieuCaoCot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14m"
                        android:textColor="#686868"
                        android:textSize="14dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/header_panel_4"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center">
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/icons8_radio_tower" />
            </LinearLayout>

    </LinearLayout>
</LinearLayout>