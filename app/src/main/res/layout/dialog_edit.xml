<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:orientation="vertical"
    app:cardCornerRadius="20dp"
    android:weightSum="1">

    <LinearLayout
        android:gravity="center"
        android:background="#fff"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/color_Blue1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title"
                android:textColor="#fff"
                android:layout_marginTop="5dp"
                android:text="Đổi tên"
                android:gravity="left"
                android:layout_marginLeft="20dp"
                android:textSize="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.04" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_height="1.5dp"
            android:background="@drawable/line"></LinearLayout>
        <EditText
            android:textColorHint="#1D8B98"
            android:textColor="#1D8B98"
            android:gravity="center"
            android:backgroundTint="#1D8B98"
            android:inputType="textPersonName"
            android:hint="Mã trạm"
            android:id="@+id/edtMaTram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnLuuThongSo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/backgound_header_4"
            android:layout_gravity="center_horizontal"
            android:text="Chỉnh sửa"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="28dp"
            android:textStyle="normal" />
    </LinearLayout>



</androidx.cardview.widget.CardView>