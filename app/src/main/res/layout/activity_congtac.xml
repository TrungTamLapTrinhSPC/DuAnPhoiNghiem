<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:windowSoftInputMode="stateVisible|adjustResize"
    android:background="@drawable/bachground_xl"
    tools:context=".congtacActivity">
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:background="#00000000"
                android:src="@drawable/ic_arrow_back_black_24dp" />
            <TextView
                android:layout_width="150dp"
                android:paddingLeft="10dp"
                android:layout_height="match_parent"
                android:text="CÔNG TÁC"
                android:textColor="#cfffffff"
                android:textSize="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/btnSearch"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:background="#00000000"
                    android:src="@drawable/ic_search_black_24dp" />

                <ImageButton
                    android:id="@+id/btnpopupmenu"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:background="#00000000"
                    android:src="@drawable/ic_settings_black_24dp" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/LayoutSearch"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="vertical">
            <android.support.v7.widget.SearchView
                android:id="@+id/SeachView"
                android:layout_width="match_parent"
                app:iconifiedByDefault="false"
                app:searchHintIcon="@drawable/ic_search_black_24dp"
                app:closeIcon="@drawable/ic_close_black_24dp"
                app:searchIcon="@drawable/ic_search_black_24dp"
                android:layout_height="match_parent"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btnHome"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_home_black_24dp"
                android:background="#00000000"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_keyboard_arrow_right_black_24dp" />
            <TextView
                android:id="@+id/tvHangMuc"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:textSize="12dp"
                android:textColor="#c1ffffff"
                android:layout_marginTop="3dp"
                android:text="GMT 2325"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_keyboard_arrow_right_black_24dp" />
            <TextView
                android:textStyle="bold"

                android:textColor="#ec1358a6"
                android:id="@+id/tvCongTac"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:textSize="15dp"
                android:layout_marginTop="3dp"
                android:text="công tác 1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="2dp"
            android:background="@drawable/line"></LinearLayout>
    </LinearLayout>
    <ViewStub
        android:id="@+id/stub_list_HM"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="10dp"
        android:inflatedId="@+id/showlayout"
        android:layout="@layout/my_list_hangmuc_view"/>
    <LinearLayout
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        <ImageButton
            android:id="@+id/fabChupTuDong"
            android:layout_width="140dp"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/duongbotron2"
            android:src="@drawable/ic_add_a_photo_black_24dp" />
        <android.support.v7.widget.SearchView
            android:id="@+id/SearchChiTiet"
            android:layout_width="match_parent"
            android:background="@drawable/duongbotron4"
            app:iconifiedByDefault="false"
            android:fitsSystemWindows="false"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:searchHintIcon="@drawable/ic_speaker_notes_black_24dp"
            app:closeIcon="@drawable/ic_close_xam_24dp"
            app:searchIcon="@drawable/ic_speaker_notes_black_24dp"
            android:layout_height="30dp"
            android:textSize="20dp"/>
        <TextView
            android:text="Phím tắt hạng mục"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#c1ffffff"
            android:layout_width="match_parent"
            android:layout_height="21dp" />
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
            <ImageButton
                android:id="@+id/btnbackHM"
                android:layout_width="40dp"
                android:layout_gravity="right"
                android:layout_height="40dp"
                android:background="@drawable/duongbotron2"
                android:src="@drawable/ic_chevron_left_black_24dp" />
            <com.example.chirag.googlesignin.HorizontalListView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:widget="http://schemas.android.com/apk/res-auto"
                android:id="@+id/HorizontalListView"
                android:layout_width="226dp"
                android:transcriptMode="alwaysScroll"
                android:layout_height="50dp"
                android:divider="#00000000"
                widget:dividerWidth="1dp"
                android:layout_gravity="top"/>
            <ImageButton
                android:layout_gravity="right"
                android:id="@+id/btnnextHM"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/duongbotron2"
                android:src="@drawable/ic_chevron_right_black_24dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>