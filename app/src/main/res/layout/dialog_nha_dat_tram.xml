<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgound_dialog"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:elevation="10dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Nhà đặt trạm"
            android:textColor="@color/color_Blue2"
            android:textSize="30dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:elevation="6dp">

            <!--Tên công trình-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên công trình:"
                android:layout_marginTop="5dp"
                android:textColor="#686868"
                android:textSize="15dp"
                android:textStyle="normal" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/hinhcovienxam"
                android:layout_marginRight="10dp">
                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/pencil" />
                <ImageButton
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/line"/>
                <AutoCompleteTextView
                    android:textColor="#111"
                    android:layout_margin="5dp"
                    android:hint="Tên công trình"
                    android:background="@drawable/backgound_edittext"
                    android:id="@+id/edtTenCongTrinh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:textSize="15dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--Số tầng vs Góc phương vị-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!-- Chiều cao công trình-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Số tầng:"
                            android:textColor="#686868"
                            android:textSize="15dp"
                            android:textStyle="normal" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/hinhcovienxam"
                            android:layout_marginRight="10dp"
                            >
                            <ImageButton
                                android:layout_margin="5dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@drawable/pencil" />
                            <ImageButton
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"

                                android:background="@drawable/line"/>

                            <AutoCompleteTextView
                                android:textColor="#111"
                                android:layout_margin="5dp"
                                android:hint="Số tầng"
                                android:gravity="center"
                                android:background="@drawable/backgound_edittext"
                                android:id="@+id/edtSoTang"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_weight="50"

                                android:textSize="15dp" />

                            <ImageButton
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"

                                android:background="@drawable/line"/>

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:text="Tầng"
                                android:gravity="center"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <!--Chiều cao công trình-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!-- Chiều cao công trình-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chiều cao công trình:"
                            android:textColor="#686868"
                            android:textSize="15dp"
                            android:textStyle="normal" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/hinhcovienxam"
                            android:layout_marginRight="10dp">
                            <ImageButton
                                android:layout_weight="1"
                                android:layout_margin="5dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@drawable/pencil" />
                            <ImageButton
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"

                                android:background="@drawable/line"/>

                            <AutoCompleteTextView
                                android:textColor="#111"
                                android:layout_margin="5dp"
                                android:hint="Chiều cao"
                                android:layout_weight="50"
                                android:gravity="center"
                                android:background="@drawable/backgound_edittext"
                                android:id="@+id/edtChieuCaoCongTrinh"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:textSize="15dp" />

                            <ImageButton
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/line"/>
                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="m" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>



                <!--Kích thước nhà-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!-- Chiều cao công trình-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Kích thước công trình:"
                            android:textColor="#686868"
                            android:textSize="15dp"
                            android:textStyle="normal" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/hinhcovienxam"
                            android:layout_marginRight="10dp"

                            android:layout_marginBottom="10dp">
                            <ImageButton
                                android:layout_width="25dp"
                                android:layout_height="30dp"
                                android:layout_margin="5dp"
                                android:background="@drawable/icons3" />

                            <ImageButton
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"

                                android:background="@drawable/line"/>

                            <AutoCompleteTextView
                                android:textColor="#111"
                                android:layout_margin="5dp"
                                android:hint="Độ dày"
                                android:gravity="center"
                                android:background="@drawable/backgound_edittext"
                                android:id="@+id/edtDoDay"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_weight="50"
                                android:textSize="15dp" />

                            <ImageButton
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/line"/>

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:text="m"
                                android:gravity="center"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/hinhcovienxam"
                            android:layout_marginRight="10dp">

                            <ImageButton
                                android:layout_width="25dp"
                                android:layout_height="30dp"
                                android:layout_margin="5dp"
                                android:background="@drawable/ic_width" />

                            <ImageButton
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"

                                android:background="@drawable/line"/>

                            <AutoCompleteTextView
                                android:textColor="#111"
                                android:layout_margin="5dp"
                                android:hint="Độ rộng"
                                android:gravity="center"
                                android:background="@drawable/backgound_edittext"
                                android:id="@+id/edtDoRong"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_weight="50"

                                android:textSize="15dp" />

                            <ImageButton
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"

                                android:background="@drawable/line"/>

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:text="m"
                                android:gravity="center"/>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <Button
            android:id="@+id/btnLuu"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/backgound_header_4"
            android:text="Lưu thiết kế"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="28dp"
            android:textStyle="normal" />

    </LinearLayout>

</LinearLayout>