<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bachground_xxl"
    android:weightSum="1">

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#fff"
            android:layout_marginTop="5dp"
            android:text="Bộ lọc công tác"
            android:gravity="left"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_height="1.5dp"
            android:background="@drawable/line2"></LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/LayoutSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="25dp">
                <TextView
                    android:textSize="15dp"
                    android:textColor="#d1ffffff"
                    android:text="Vị trí :"
                    android:layout_width="80dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/edtVTThaoTac"
                    android:layout_width="180dp"
                    android:hint="Nội dung công tác"
                    android:textSize="15dp"
                    android:textColorHint="#cbbcbbbb"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/duongbotron4"
                    android:layout_height="25dp" />
                <ImageView
                    android:id="@+id/imgViTiThaoTac"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_arrow_drop_down_black_24dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:weightSum="1">


            <Button
                android:id="@+id/btnOK"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.21"
                android:background="@drawable/duongbotron"
                android:text="OK"
                android:textColor="#faf8f8" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>