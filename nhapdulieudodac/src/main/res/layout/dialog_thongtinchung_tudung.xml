<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bachground_xxl"
    android:weightSum="1">
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btnThoat"
            android:background="#00000000"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_close_wieth_24dp" />
        <TextView
            android:textColor="#fff"
            android:textSize="20dp"
            android:gravity="left"
            android:paddingLeft="15dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THÔNG TIN CHUNG"/>


        <ImageButton
            android:id="@+id/btnCopy"
            android:background="#00000000"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_content_copy_black_24dp" />
    </LinearLayout>
    <HorizontalScrollView
        android:layout_gravity="center"
        android:background="@drawable/boder_table"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal|vertical"
        android:layout_width="wrap_content">
        <TableLayout
            android:id="@+id/TableBia"
            android:background="#3e3d3d"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableRow  >
                <TextView
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_span="2"
                    android:layout_weight="0.5"
                    android:layout_width="300dp"
                    android:textColor="#000"
                    android:background="#F1f1f1"
                    android:text="Bảng thông tin chung"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow  >
                <TextView
                    android:textStyle="bold"
                    android:background="#F1f1f1"
                    android:layout_width="115dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="Địa điểm" />
                <EditText
                    android:id="@+id/tbBiaDiaDiem"
                    android:layout_weight="0.5"
                    android:layout_height="fill_parent"
                    android:layout_width="match_parent"
                    android:gravity="left"
                    android:textSize="15dp"
                    android:background="#fff"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_marginBottom="0.5dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:background="#fff"
                    android:gravity="left"
                    />
            </TableRow>
            <TableRow  >
                <TextView
                    android:textStyle="bold"
                    android:background="#F1f1f1"
                    android:layout_width="75dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="Mã trạm" />
                <EditText
                    android:id="@+id/tbBiaMaTram"
                    android:layout_weight="0.5"
                    android:layout_height="fill_parent"
                    android:layout_width="match_parent"
                    android:gravity="left"
                    android:textSize="15dp"
                    android:background="#fff"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_marginBottom="0.5dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:background="#fff"
                    android:gravity="left"
                    />
            </TableRow>
            <TableRow  >
                <TextView
                    android:textStyle="bold"
                    android:background="#F1f1f1"
                    android:layout_width="105dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="Loại cột" />
                <TextView
                    android:id="@+id/tbBiaLoaiCot"
                    android:layout_weight="0.5"
                    android:layout_height="fill_parent"
                    android:layout_width="match_parent"
                    android:gravity="left"
                    android:textSize="15dp"
                    android:background="#fff"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_marginBottom="0.5dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:background="#fff"
                    android:gravity="left"
                    />
            </TableRow>
            <TableRow  >

                <TextView
                    android:layout_width="105dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:background="#F1f1f1"
                    android:gravity="center"
                    android:text="Chiều cao cột (m)"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/tbBiaDoCao"
                    android:layout_weight="0.5"
                    android:layout_height="fill_parent"
                    android:layout_width="match_parent"
                    android:gravity="left"
                    android:textSize="15dp"
                    android:background="#fff"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_marginBottom="0.5dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:background="#fff"
                    android:gravity="left"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:textStyle="bold"
                    android:background="#F1f1f1"
                    android:layout_width="135dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="Bề rộng chân cột" />
                <EditText
                    android:id="@+id/tbBiaKichThuocChanCot"
                    android:layout_weight="0.5"
                    android:layout_height="fill_parent"
                    android:layout_width="match_parent"
                    android:gravity="left"
                    android:textSize="15dp"
                    android:background="#fff"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_marginBottom="0.5dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:background="#fff"
                    android:gravity="left"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:textStyle="bold"
                    android:background="#F1f1f1"
                    android:layout_width="135dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="Bề rộng đỉnh cột" />
                <EditText
                    android:id="@+id/tbBiaKichThuocDinhCot"
                    android:layout_weight="0.5"
                    android:layout_height="fill_parent"
                    android:layout_width="match_parent"
                    android:gravity="left"
                    android:textSize="15dp"
                    android:background="#fff"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_marginBottom="0.5dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:background="#fff"
                    android:gravity="left"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:textStyle="bold"
                    android:background="#F1f1f1"
                    android:layout_width="135dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="Vị trí đặt" />
                <TextView
                    android:id="@+id/tbBiaViTri"
                    android:layout_weight="0.5"
                    android:layout_height="fill_parent"
                    android:layout_width="match_parent"
                    android:gravity="left"
                    android:textSize="15dp"
                    android:background="#fff"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_marginBottom="0.5dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:background="#fff"
                    android:gravity="left"
                    />
            </TableRow>
            <TableRow  >
                <TextView
                    android:textStyle="bold"
                    android:background="#F1f1f1"
                    android:layout_width="105dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="Bê tông móng" />
                <EditText
                    android:id="@+id/tbBiaMacBeTong"
                    android:layout_weight="0.5"
                    android:layout_height="fill_parent"
                    android:layout_width="115dp"
                    android:gravity="left"
                    android:textSize="15dp"
                    android:background="#fff"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_marginBottom="0.5dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:background="#fff"
                    android:gravity="left"
                    />
            </TableRow>
            <TableRow>

                <TextView
                    android:layout_width="105dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:background="#F1f1f1"
                    android:gravity="center"
                    android:text="Số đốt"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/tbBiaSoDot"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:background="#fff"
                    android:gravity="left"
                    android:textSize="15dp" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:background="#fff"
                    android:gravity="left"
                    />
            </TableRow>

        </TableLayout>
    </HorizontalScrollView>
    <Button
        android:layout_gravity="center"
        android:id="@+id/btnLuuThongTinChung"
        android:text="Chỉnh sửa thông tin trạm"
        android:textSize="13dp"
        android:textColor="#FFF"
        android:layout_margin="10dp"
        android:background="@drawable/backgound_dialog"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="250dp"
        android:layout_height="40dp" />

    <ImageButton
        android:id="@+id/btnChupHienTrang"
        android:layout_width="250dp"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/backgound_dialog"
        android:src="@drawable/ic_add_a_photo_black" />
</LinearLayout>