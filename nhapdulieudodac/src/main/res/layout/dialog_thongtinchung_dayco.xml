<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/bachground_xxl">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="320dp"
        android:orientation="vertical">
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btnThoat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#00000000"
            android:src="@drawable/ic_close_wieth_24dp" />
        <TextView
            android:textColor="#fff"
            android:textSize="20dp"
            android:gravity="left"
            android:paddingLeft="15dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THÔNG TIN CHUNG"/>

        <ImageButton
            android:id="@+id/btnCopy"
            android:background="#00000000"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_content_copy_black_24dp" />
    </LinearLayout>
    <HorizontalScrollView
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal|vertical"
        android:layout_width="wrap_content">
        <TableLayout
            android:id="@+id/TableBia"
            android:background="#3e3d3d"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableRow>
                <TextView
                    android:layout_height="1dp"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_span="2"
                    android:layout_weight="0.5"
                    android:layout_width="300dp"
                    android:textColor="#000"
                    android:background="#F1f1f1"
                    android:text="Bảng thông tin chung"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow  >
                <TextView
                    android:textStyle="bold"
                    android:background="#F1f1f1"
                    android:layout_width="150dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:text="Địa điểm:" />
                <TextView
                    android:id="@+id/tbBiaDiaDiem"
                    android:layout_weight="0.5"
                    android:layout_height="fill_parent"
                    android:layout_width="120dp"
                    android:gravity="left"
                    android:textSize="15dp"
                    android:background="#fff"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_marginBottom="0.5dp"/>
                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:background="#fff"
                    android:gravity="left"
                    />
            </TableRow>
            <TableRow  >
                <TextView
                    android:textStyle="bold"
                    android:background="#F1f1f1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:text="Mã trạm:" />
                <EditText
                    android:id="@+id/tbBiaMaTram"
                    android:layout_weight="0.5"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:gravity="left"
                    android:textSize="15dp"
                    android:background="#fff"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_marginBottom="0.5dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:background="#fff"
                    android:gravity="left"
                    />
            </TableRow>
            <TableRow  >
                <TextView
                    android:textStyle="bold"
                    android:background="#F1f1f1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:text="Loại cột:" />
                <TextView
                    android:id="@+id/tbBiaLoaiCot"
                    android:layout_weight="0.5"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:gravity="left"
                    android:textSize="15dp"
                    android:background="#fff"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_marginBottom="0.5dp"/>
                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:background="#fff"
                    android:gravity="left"
                    />
            </TableRow>
            <TableRow  >
                <TextView
                    android:textStyle="bold"
                    android:background="#F1f1f1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:text="Chiều cao cột (m):" />
                <EditText
                    android:id="@+id/tbBiaDoCao"
                    android:layout_weight="0.5"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:gravity="left"
                    android:textSize="15dp"
                    android:background="#fff"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_marginBottom="0.5dp"/>
                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:background="#fff"
                    android:gravity="left"
                    />
            </TableRow>
            <TableRow>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_marginBottom="0.5dp"
                    android:layout_weight="0.5"
                    android:background="#F1f1f1"
                    android:gravity="left"
                    android:text="Kích thước thân cột:"

                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tbBiaKichThuocCot"
                    android:layout_weight="0.5"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:gravity="left"
                    android:textSize="15dp"
                    android:hint="(m x m)"
                    android:background="#fff"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_marginBottom="0.5dp"/>
                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:background="#fff"
                    android:gravity="left"
                    />
            </TableRow>
            <TableRow  >
                <TextView
                    android:textStyle="bold"
                    android:background="#F1f1f1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:text="Vị trí đặt:" />
                <TextView
                    android:id="@+id/tbBiaViTri"
                    android:layout_weight="0.5"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:gravity="left"
                    android:textSize="15dp"
                    android:background="#fff"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_marginBottom="0.5dp"/>
                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:background="#fff"
                    android:gravity="left"
                    />
            </TableRow>
            <TableRow  >
                <TextView
                    android:textStyle="bold"
                    android:background="#F1f1f1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:text="Bê tông móng:" />
                <TextView
                    android:id="@+id/tbBiaMacBeTong"
                    android:layout_weight="0.5"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:gravity="left"
                    android:textSize="15dp"
                    android:background="#fff"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_marginBottom="0.5dp"/>
                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:background="#fff"
                    android:gravity="left"
                    />
            </TableRow>
            <TableRow  >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_marginBottom="0.5dp"
                    android:layout_weight="0.5"
                    android:background="#F1f1f1"
                    android:gravity="left"
                    android:text="Số móng co:"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tbBiaSoMong"
                    android:layout_weight="0.5"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:gravity="left"
                    android:textSize="15dp"
                    android:background="#fff"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_marginBottom="0.5dp"/>
                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:background="#fff"
                    android:gravity="left"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:textStyle="bold"
                    android:background="#F1f1f1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:text="Số chân cột:" />

                <TextView
                    android:id="@+id/tbBiaSoCot"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:background="#fff"
                    android:gravity="left"
                    android:textSize="15dp" />
                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:background="#fff"
                    android:gravity="left"
                    />
            </TableRow>
            <TableRow  >
                <TextView
                    android:textStyle="bold"
                    android:background="#F1f1f1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:text="Chiều cao đốt (m):" />
                <EditText
                    android:id="@+id/tbBiaChieuCaoDot"
                    android:layout_weight="0.5"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:gravity="left"
                    android:textSize="15dp"
                    android:background="#fff"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_marginBottom="0.5dp"/>
                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:background="#fff"
                    android:gravity="left"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:textStyle="bold"
                    android:background="#F1f1f1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:text="Số tầng dây co:" />
                <EditText
                    android:id="@+id/tbBiaSoTangDay"
                    android:layout_weight="0.5"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:gravity="left"
                    android:textSize="15dp"
                    android:background="#fff"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_marginBottom="0.5dp"/>
                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:background="#fff"
                    android:gravity="left"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:textStyle="bold"
                    android:background="#F1f1f1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:text="Số đốt:" />

                <EditText
                    android:id="@+id/tbBiaSoDot"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:background="#fff"
                    android:hint="Chạm 2 lần sẽ tự tính"
                    android:gravity="left"
                    android:textSize="15dp" />
                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:background="#fff"
                    android:gravity="left"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:textStyle="bold"
                    android:background="#F1f1f1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:text="Vị trí có gá cx (Tầng)" />

                <TextView
                    android:id="@+id/tbBiaGiaChongXoay"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:background="#fff"
                    android:gravity="left"
                    android:hint="Tầng dây co có gá "
                    android:textSize="15dp" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginHorizontal="0.5dp"
                    android:layout_weight="0.5"
                    android:background="#fff"
                    android:gravity="left"
                    />
            </TableRow>


        </TableLayout>
    </HorizontalScrollView>
    <Button
        android:layout_gravity="center"
        android:id="@+id/btnLuuThongTinChung"
        android:text="Lưu số liệu thông tin chung"
        android:textSize="13dp"
        android:textColor="#FFF"
        android:layout_margin="10dp"
        android:background="@drawable/backgound_dialog"
        android:layout_width="250dp"
        android:layout_height="40dp" />
    <ImageButton
        android:id="@+id/btnChupHienTrang"
        android:layout_width="250dp"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/backgound_dialog"
        android:src="@drawable/ic_add_a_photo_black" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"></LinearLayout>
    </LinearLayout>
</ScrollView>