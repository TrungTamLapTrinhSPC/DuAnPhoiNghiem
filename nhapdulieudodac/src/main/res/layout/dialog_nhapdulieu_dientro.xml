<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:id="@+id/viewgroup"

    android:background="@drawable/backgound_dialog"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="320dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bachground_xl"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnBackThanCot"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:src="@drawable/ic_close_wieth_24dp" />

            <TextView
                android:id="@+id/tvLanDo"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Thoát sét cho kim thu sét"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold" />
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:scaleType="center"
                android:src="@drawable/ic_down_whitle_24dp" />
        </LinearLayout>
        <!--KÍCH THƯỚC MÓNG-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="2dp"
            android:layout_height="3.5dp"
            android:background="@drawable/line_ngan"></LinearLayout>
        <LinearLayout
            android:id="@+id/btnHienKichThuocThanCot"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="10dp"
            android:background="@drawable/backgound_dialog"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_down" />
            <TextView
                android:layout_width="266dp"
                android:layout_height="match_parent"
                android:text="Giá trị điện trở:"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutKichThuocThanCot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Điện trở (Ohm.m):"/>
            <AutoCompleteTextView
                android:id="@+id/edtDienTro"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Ohm.m"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Đánh giá:"/>
            <AutoCompleteTextView
                android:id="@+id/tvDanhGia"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Đánh giá"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Ghi chú:"/>

            <AutoCompleteTextView
                android:id="@+id/edtGhiChu"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/edittext"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Ghi chú"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/btnDuLieuDoThanCot"
                android:text="Lưu số liệu"
                android:textSize="13dp"
                android:layout_margin="20dp"
                android:background="@drawable/backgound_dialog"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <ImageButton
                android:id="@+id/btnChupHienTrang"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/backgound_dialog"
                android:src="@drawable/ic_add_a_photo_black" />
        </LinearLayout>


        <!--XEM DẠNG BẢNG-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="2dp"
            android:layout_height="3.5dp"
            android:background="@drawable/line_ngan"></LinearLayout>

        <LinearLayout
            android:id="@+id/btnHienBang"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="10dp"
            android:background="@drawable/backgound_dialog"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_down" />
            <TextView
                android:layout_width="266dp"
                android:layout_height="match_parent"
                android:text="Xem trước dạng bảng:"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
        android:id="@+id/layoutXemDangBang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <ScrollView
                android:paddingLeft="5dp"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal|vertical"
                android:layout_width="match_parent"
                android:scrollbarStyle="outsideInset"
                android:fillViewport="true">
                <HorizontalScrollView
                    android:background="@drawable/boder_table"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal|vertical"
                    android:layout_width="wrap_content">
                    <TableLayout
                        android:id="@+id/Table5"
                        android:background="#3e3d3d"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TableRow>
                            <TextView
                                android:textStyle="bold"
                                android:background="#F1f1f1"
                                android:layout_width="115dp"
                                android:layout_height="fill_parent"
                                android:layout_marginBottom="0.5dp"
                                android:layout_marginHorizontal="0.5dp"
                                android:layout_weight="0.5"
                                android:gravity="center"
                                android:text="Giá trị điệ trở tại hệ thống tiếp địa" />
                            <TextView android:layout_weight="0.5"
                                android:background="#F1f1f1"
                                android:textStyle="bold"
                                android:layout_height="fill_parent"
                                android:layout_width="115dp"
                                android:gravity="center"
                                android:layout_marginHorizontal="0.5dp"
                                android:layout_marginBottom="0.5dp"
                                android:text="Điện trở yêu cầu"/>
                            <TextView android:layout_weight="0.5"
                                android:background="#F1f1f1"
                                android:textStyle="bold"
                                android:layout_height="fill_parent"
                                android:layout_width="165dp"
                                android:gravity="center"
                                android:layout_marginHorizontal="0.5dp"
                                android:layout_marginBottom="0.5dp"
                                android:text="Kết luận"/>
                            <TextView android:layout_weight="0.5"
                                android:background="#F1f1f1"
                                android:textStyle="bold"
                                android:layout_height="fill_parent"
                                android:layout_width="95dp"
                                android:gravity="center"
                                android:layout_marginHorizontal="0.5dp"
                                android:layout_marginBottom="0.5dp"
                                android:text="Đề xuất"/>
                            <TextView
                                android:layout_weight="0.5"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:background="#fff"
                                android:layout_marginBottom="0.5dp"/>
                        </TableRow>
                        <TableRow >
                            <TextView android:layout_weight="0.5"
                                android:gravity="center"
                                android:textSize="15dp"
                                android:layout_height="fill_parent"
                                android:background="#fff"
                                android:layout_marginHorizontal="0.5dp"
                                android:layout_marginBottom="0.5dp"/>
                            <TextView
                                android:textStyle="bold"
                                android:background="#F1f1f1"
                                android:layout_height="fill_parent"
                                android:layout_width="105dp"
                                android:layout_marginBottom="0.5dp"
                                android:layout_marginHorizontal="0.5dp"
                                android:layout_weight="0.5"
                                android:gravity="center"
                                android:text="10" />
                            <TextView android:layout_weight="0.5"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:textSize="15dp"
                                android:background="#fff"
                                android:layout_marginHorizontal="0.5dp"
                                android:layout_marginBottom="0.5dp"/>
                            <TextView android:layout_weight="0.5"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:textSize="15dp"
                                android:background="#fff"
                                android:layout_marginHorizontal="0.5dp"
                                android:layout_marginBottom="0.5dp"/>
                            <TextView
                                android:layout_weight="0.5"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:background="#fff"
                                android:layout_marginBottom="0.5dp"/>
                        </TableRow>
                        <TableRow >
                            <TextView android:layout_weight="0.5"
                                android:gravity="center"
                                android:textSize="15dp"
                                android:layout_height="fill_parent"
                                android:background="#fff"
                                android:layout_marginHorizontal="0.5dp"
                                android:layout_marginBottom="0.5dp"/>
                            <TextView
                                android:textStyle="bold"
                                android:background="#F1f1f1"
                                android:layout_height="fill_parent"
                                android:layout_width="105dp"
                                android:layout_marginBottom="0.5dp"
                                android:layout_marginHorizontal="0.5dp"
                                android:layout_weight="0.5"
                                android:gravity="center"
                                android:text="10" />
                            <TextView android:layout_weight="0.5"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:textSize="15dp"
                                android:background="#fff"
                                android:layout_marginHorizontal="0.5dp"
                                android:layout_marginBottom="0.5dp"/>
                            <TextView android:layout_weight="0.5"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:textSize="15dp"
                                android:background="#fff"
                                android:layout_marginHorizontal="0.5dp"
                                android:layout_marginBottom="0.5dp"/>
                            <TextView
                                android:layout_weight="0.5"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:background="#fff"
                                android:layout_marginBottom="0.5dp"/>
                        </TableRow>
                        <TableRow >
                            <TextView android:layout_weight="0.5"
                                android:gravity="center"
                                android:textSize="15dp"
                                android:layout_height="fill_parent"
                                android:background="#fff"
                                android:layout_marginHorizontal="0.5dp"
                                android:layout_marginBottom="0.5dp"/>
                            <TextView
                                android:textStyle="bold"
                                android:background="#F1f1f1"
                                android:layout_height="fill_parent"
                                android:layout_width="105dp"
                                android:layout_marginBottom="0.5dp"
                                android:layout_marginHorizontal="0.5dp"
                                android:layout_weight="0.5"
                                android:gravity="center"
                                android:text="10" />
                            <TextView android:layout_weight="0.5"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:textSize="15dp"
                                android:background="#fff"
                                android:layout_marginHorizontal="0.5dp"
                                android:layout_marginBottom="0.5dp"/>
                            <TextView android:layout_weight="0.5"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:textSize="15dp"
                                android:background="#fff"
                                android:layout_marginHorizontal="0.5dp"
                                android:layout_marginBottom="0.5dp"/>
                            <TextView
                                android:layout_weight="0.5"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:background="#fff"
                                android:layout_marginBottom="0.5dp"/>
                        </TableRow>
                    </TableLayout>
                </HorizontalScrollView>
            </ScrollView>

        </LinearLayout>


    </LinearLayout>

</ScrollView>