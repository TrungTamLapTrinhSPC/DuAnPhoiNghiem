<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/backgound_dialog"
    android:layout_height="match_parent">
    <LinearLayout
        android:paddingLeft="5dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:paddingLeft="5dp"
            android:background="@drawable/edittext"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/dhm"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/xma" />
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="5dp"
            android:background="@drawable/edittext"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/dlm"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/dlm" />
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="5dp"
            android:background="@drawable/edittext"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/hx2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/xma_m" />
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="5dp"
            android:background="@drawable/edittext"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/drm"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/k1_m1" />
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="5dp"
            android:background="@drawable/edittext"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/k2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/k2" />
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="5dp"
            android:background="@drawable/edittext"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/none"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/none" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>