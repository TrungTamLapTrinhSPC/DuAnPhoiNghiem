<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:id="@+id/viewgroup"

    android:background="@drawable/backgound_dialog"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="320dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bachground_xl"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btnBackMong"
                android:background="#00000000"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_close_wieth_24dp" />
            <EditText
                android:id="@+id/tvTenMong"
                android:gravity="center"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="30dp"
                android:textStyle="bold"
                android:text="Dầm D1"/>

        </LinearLayout>
        <!--KÍCH THƯỚC MÓNG-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="2dp"
            android:layout_height="3.5dp"
            android:background="@drawable/line_ngan"></LinearLayout>
        <LinearLayout
            android:id="@+id/btnHienKichThuocMong"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="10dp"
            android:background="@drawable/backgound_dialog"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_down" />
            <TextView
                android:layout_width="266dp"
                android:layout_height="match_parent"
                android:text="Kích thước và hiện trạng:"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutKichThuocMong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnCopy"
                    android:layout_width="80dp"
                    android:textColor="#000"
                    android:textSize="13dp"
                    android:background="@drawable/backgound_dialog"
                    android:layout_height="match_parent"
                    android:text="Copy"/>
                <Button
                    android:id="@+id/btnPaste"
                    android:layout_width="80dp"
                    android:textColor="#000"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/backgound_dialog"
                    android:layout_height="match_parent"
                    android:text="Paste"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Kích thước (m):"/>
            <AutoCompleteTextView
                android:id="@+id/edtKichThuocMong"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Đường kính (VD: 9-M18)"
                android:textSize="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvViTriHienTrang"
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="Đánh giá hiện trạng:"/>
                <ImageButton
                    android:id="@+id/btnLocHienTrang"
                    android:layout_width="40dp"
                    android:background="#00000000"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_file_download_black_24dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center"
                android:orientation="horizontal">
                <AutoCompleteTextView
                    android:id="@+id/edtDanhGiaMong"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/edittext"
                    android:hint="Đánh giá"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/btnBackHienTrang"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:src="@drawable/ic_back"
                    android:textStyle="bold" />
                <ImageButton
                    android:id="@+id/btnSearch"
                    android:layout_width="90dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:src="@drawable/ic_search"
                    android:textStyle="bold" />
                <ImageButton
                    android:id="@+id/btnNextHienTrang"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_next"
                    android:background="#00000000"
                    android:textStyle="bold" />
            </LinearLayout>
            <TextView
                android:id="@+id/tvViTriDeXuat"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Đề xuất:"/>
            <AutoCompleteTextView
                android:id="@+id/edtDeXuatMong"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/edittext"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Đề xuất"
                android:textSize="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/btnBackDX"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:src="@drawable/ic_back"
                    android:textStyle="bold" />
                <ImageButton
                    android:id="@+id/btnSearchDX"
                    android:layout_width="90dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:src="@drawable/ic_search"
                    android:textStyle="bold" />
                <ImageButton
                    android:id="@+id/btnNextDX"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_next"
                    android:background="#00000000"
                    android:textStyle="bold" />
            </LinearLayout>
            <Button
                android:id="@+id/btnDuLieuDoMong"
                android:text="Lưu số liệu"
                android:textSize="13dp"
                android:layout_margin="10dp"
                android:background="@drawable/backgound_dialog"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <ImageButton
                android:id="@+id/btnChupHienTrang"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/backgound_dialog"
                android:src="@drawable/ic_add_a_photo_black" />
        </LinearLayout>

        <!--XEM DẠNG BẢNG-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="2dp"
            android:layout_height="3.5dp"
            android:background="@drawable/line_ngan"></LinearLayout>
        <LinearLayout
            android:id="@+id/btnHienBang"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="10dp"
            android:background="@drawable/backgound_dialog"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_down" />

            <TextView
                android:layout_width="266dp"
                android:layout_height="match_parent"
                android:text="Xem trước dạng bảng:"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutXemDangBang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
